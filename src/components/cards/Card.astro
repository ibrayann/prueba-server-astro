---
import { People } from "../icons/icons.jsx";
import { Editar } from "../icons/icons.jsx";
import { Search } from "../icons/icons.jsx";

interface Props {
  title: string;
  content: any;
  to?: string;
  tema?: string;
  inferior?: boolean;
}

const { title, content, to = "tema", tema, inferior } = Astro.props;

const icon = {
  "tema-medicina": "People",
  "tema-programaci√≥n": "Editar",
  "tema-cocina": "Search",
};
---

<a
  href={to}
  class=`bg-[#DDDFE0]  rounded-lg p-7 shadow-md hover:scale-105 transform transition duration-300 ease-in-out  ${ inferior && "min-w-[300px] sm:max-w-[500]" } `
>
  <div class="bg-white my-2 w-24 h-24 rounded-full mx-auto p-4">
    {icon[tema] === "People" && <People />}
    {icon[tema] === "Editar" && <Editar />}
    {icon[tema] === "Search" && <Search />}
  </div>

  <section class=`text-center mt-7 text-ellipsis`>
    <h2 class="text-xl font-bold mb-3 text-center line-clamp-2">
      {title}
    </h2>
    <p class="text-gray-700 text-sm line-clamp-3">
      {content}
    </p>
  </section>
</a>
