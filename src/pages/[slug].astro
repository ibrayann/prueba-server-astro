---

import Layout from "../layout/Layout.astro";
import Encuesta from "../components/ReactComponents/Encuesta";
import { Home, MenorQue } from "../components/icons/icons";
import ToLogin from "../components/utilities/ToLogin";
export const prerender = true



/* httponly cookies */

const user = Astro.cookies.get("user");
const role = user?.value ? JSON.parse(user.value).role : null;

export const getStaticPaths = async () => {
  const posts = await Astro.glob("./posts/*.md");

  return posts.map((post) => ({
    params: {
      slug: post.frontmatter.slug,
    },
    props: {
      post,
    },
  }));
};

const { Content, frontmatter } = Astro.props.post;

function determinarVisibilidad(frontmatter, user) {
  const role = user?.value ? JSON.parse(user.value).role : null;
  console.log(role);  
  if (frontmatter.publico === "general") {
    return true;
  }

  if (role && role === "ceo") {

    return true;
  }

  if (!user) {
    console.log("No puedes ver esta página sin iniciar sesión");
    return false;
  }

  if (role && role !== "ceo" && frontmatter.publico !== user?.role) {
    console.log("No tienes permiso para ver esta página");
    return false;
  }


}

const visible = determinarVisibilidad(frontmatter, user);

const fecha = new Date(frontmatter.createdAt);
const date = new Date(fecha);
const formattedDate = date.toLocaleDateString("es-ES", {
  day: "numeric",
  month: "long",
  year: "numeric",
});


---

<Layout title={frontmatter.titulo}>
  <ToLogin client:only publico={frontmatter.publico} />

  <section class="mt-10 mx-5 sm:h-full">
    <div class="">
      <div class="2xl:px-96 xl:px-72 lg:px-48 md:px-32">
        <!-- cambiar a max-w -->
        <div class="flex items-center gap-3">
          <!-- Breadcrumb -->
          <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
              <li
                class="inline-flex items-center text-secondary hover:text-gray-400 md:ml-2 dark:text-secondary dark:hover:text-gray-400"
              >
                <a
                  href="/"
                  class="inline-flex items-center text-sm font-medium"
                >
                  <Home />
                   Home
                </a>
              </li>
              <li>
                <div class="flex items-center">
                  <MenorQue />
                  <a
                    href={frontmatter.slugcategoria}
                    class="ml-1 text-sm font-medium text-secondary hover:text-gray-400 md:ml-2 dark:text-secondary dark:hover:text-gray-400"
                    >{frontmatter.categoria}</a
                  >
                </div>
              </li>
              <li aria-current="page">
                <div class="flex items-center">
                  <MenorQue />
                  <span
                    class="ml-1 text-sm font-medium text-secondary hover:text-gray-400 md:ml-2 dark:text-secondary dark:hover:text-gray-400"
                    >{frontmatter.titulo}</span
                  >
                </div>
              </li>
            </ol>
          </nav>
        </div>
        <!-- Header -->
        {
          visible ? (<section
          id="header"
          class="justify-between mb-10 mt-20 gap-4 items-center flex-col md:flex-row "
        >
          <h2 class="font-bold text-5xl text-secondary">
            {frontmatter.titulo}
          </h2>
          <a class="ms-auto flex gap-2 font-semibold" id="enlace">
            Compartir
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 flex"
              viewBox="0 0 24 24"
              ><path
                d="M10 3V5H5V19H19V14H21V20C21 20.5523 20.5523 21 20 21H4C3.44772 21 3 20.5523 3 20V4C3 3.44772 3.44772 3 4 3H10ZM17.5858 5H13V3H21V11H19V6.41421L12 13.4142L10.5858 12L17.5858 5Z"
              ></path></svg>
          </a>
        </section>
        <div id="info" class=" mb-20 mt-5">
          <p>Publidado el {formattedDate} by Monbak SpA.</p>
        </div>
        <!-- Content -->
        <div id="content" class="text-gray-600 leading-loose ">
          <Content />
        </div>
        <Encuesta client:visible id={frontmatter.id} />
        ) : ( 
          <svg
          role="img"
          id="spinner"
          aria-labelledby="loading-aria"
          viewBox="0 0 1280 1000"
          preserveAspectRatio="none"
          class="my-20"
        >
          <title id="loading-aria">Loading...</title>
          <rect
            x="0"
            y="0"
            width="100%"
            height="100%"
            clip-path="url(#clip-path)"
            style='fill: url("#fill");'></rect>
          <defs>
            <clipPath id="clip-path">
              <rect x="4" y="13" rx="3" ry="3" width="100%" height="10%"></rect>
              <rect x="4" y="150" rx="3" ry="3" width="100%" height="5%"></rect>
              <rect x="4" y="300" rx="3" ry="3" width="100%" height="30%"
              ></rect>
              <rect x="4" y="700" rx="3" ry="3" width="100%" height="50%"
              ></rect>
            </clipPath>
            <linearGradient id="fill">
              <stop offset="0.599964" stop-color="#DDDFE0" stop-opacity="1">
                <animate
                  attributeName="offset"
                  values="-2; -2; 1"
                  keyTimes="0; 0.25; 1"
                  dur="2s"
                  repeatCount="indefinite"></animate>
              </stop>
              <stop offset="1.59996" stop-color="#CECECE" stop-opacity="1">
                <animate
                  attributeName="offset"
                  values="-1; -1; 2"
                  keyTimes="0; 0.25; 1"
                  dur="2s"
                  repeatCount="indefinite"></animate>
              </stop>
              <stop offset="2.59996" stop-color="#DDDFE0" stop-opacity="1">
                <animate
                  attributeName="offset"
                  values="0; 0; 3"
                  keyTimes="0; 0.25; 1"
                  dur="2s"
                  repeatCount="indefinite"></animate>
              </stop>
            </linearGradient>
          </defs>
        </svg>)
       
        }


       
        
      </div>
    </div>
  </section>

</Layout>
